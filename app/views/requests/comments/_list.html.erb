<ul id="request_annotations_<%= @request.id %>" style="list-style-type:none;padding:0;">
  <% if @request.comments.size > 0 %>
    <% @comments.each do |comment| %>
      <li><%= render :partial => "comment" , :locals => {:comment => comment, :commentable => @request}%></li>
    <% end %>
  <% else %>
    <%= display_user_guide(I18n.t('requests.comments.no_comments')) %>
  <% end %>
</ul>
