<h2>Stamping of stock</h2>

<%= form_for(:stock_stamper, url: {action: "create"}) do |f| %>

  <table >
    <thead>
     <tr>
       <th></th>
       <th>Scanned barcodes</th>
     </tr>
    </thead>
    <tbody>
      <tr>
         <td><%=f.label :user, 'Scan user ID' %></td>
         <td><%= f.text_field :user, :onkeypress => "return disable_cr_and_change_focus(event,'stock_stampers_user','stock_stampers_source_plate')" %></td>
      </tr>
      <tr>
         <td><%= f.label :source_plate, 'Scan source plate barcode' %></td>
         <td><%= f.text_field :source_plate, :onkeypress => "return disable_cr_and_change_focus(event,'stock_stampers_source_plate','stock_stampers_destination_plate')" %></td>
      </tr>
      <tr>
         <td><%= f.label :destination_plate, 'Scan destination plate' %></td>
         <td><%= f.text_field :destination_plate %></td>
      </tr>
    </tbody>
  </table>
  <br>

  <div class="form-group">
    <%= f.label :source_plate_type, 'Source plate type' %>
    <%= f.select "source_plate_type", options_for_select(PlatePurpose.cherrypickable_as_source.map(&:name)) %>
  </div>

  <div class="form-group">
    <%= f.label :destination_plate_type, 'Destination plate type' %>
    <%= f.select "destination_plate_type", options_for_select(PlatePurpose.cherrypickable_as_source.map(&:name)) %>
  </div>

  <div class="form-group">
    <%= f.label :destination_plate_maximum_volume, 'Destination plate maximum volume' %>
    <%= f.select "destination_plate_maximum_volume", options_for_select([180, 280, 500, 800], 800) %>
  </div>

  <div class="form-group">
    <%= f.label :overage, 'Overage' %>
    <%= f.number_field :overage, step: 0.1, value: 1.2 %>
  </div>

  <div class="form-group">
    <%= f.submit "Generate TECAN file" %>
  </div>

<% end %>
