<ul id="batch_annotations_<%= @batch.id %>" style="list-style-type:none;padding:0;">
  <% if @batch.comments.size > 0 %>
    <% @comments.each do |comment| %>
      <li><%= render :partial => "comment" , :locals => {:comment => comment, :commentable => @batch}%></li>
    <% end %>
  <% else %>
    <%= display_user_guide(I18n.t('batches.comments.no_comments')) %>
  <% end %>
</ul>
