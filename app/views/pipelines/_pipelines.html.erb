<%= panel(style,title:"#{title} pipelines".titleize) do %>

  <% if pipelines.empty? -%>
    <div id="empty_filter">
      No pipelines found. <%= link_to "Create the first one", :action => "new" %>
    </div>
  <% else -%>
    <ul>
      <% pipelines.each do |pipeline| -%>

        <% if pipeline.active? -%>
          <li><%= link_to pipeline.name, pipeline_path(pipeline) %></li>
        <% else -%>
          <% if current_user.is_administrator? -%>
            <li><%= link_to pipeline.name, pipeline_path(pipeline) %> (inactive)</li>
          <% end %>
        <% end -%>

      <% end -%>
    </ul>
  <% end -%>
<% end %>

