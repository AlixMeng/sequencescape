<%= form_group do %>
  <div class='col-md-4'>
    <%= form.label(field_name, sections.label, sections.label_options) %><br/>
    <span class="property_edit_info"><%= sections.edit_info %></span>
  </div>
  <div class='col-md-5'>
    <%= field %>
  </div>
  <div class="help-block col-md-3">
  <%# We know that the field itself can vary for the same attribute, hence we provide a suggested ID here %>
  <% help_text("#{sections.label} help text", field.hash) do %>
    <%= raw(sections.help) %>
  <% end %>
  </div>
<% end %>
