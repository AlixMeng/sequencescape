<h1>Labware Reception</h1>
<%= javascript_include_tag 'labwhere_reception' %>
<div class="user_guide">
  <h2>Getting started...</h2>
  <p>This page integrates with Labwhere to provide shelf level asset tracking, replacing ETS.</p>
</div>
<% form_for(@labwhere_reception, :url => labwhere_receptions_path) do |form| %>

  <div class="form-group">
  <%= form.label :location_id, 'Sequencescape location' %>
  <%= form.select :location_id, Location.all.map {|l| [ l.name, l.id] }, :required => true %>
  </div>

  <div class="form-group">
  <%= form.label :user_code, 'User barcode or swipecard' %>
  <%= form.text_field :user_code, :required => true %>
  </div>

  <div class="form-group">
  <%= form.label :location_barcode, 'Scan location barcode' %>
  <%= form.text_field :location_barcode, :required => true %>
  </div>

  <%= form.submit %>
<% end %>
